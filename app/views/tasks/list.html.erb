<div class="container">
  <h1>My tasks</h1>

  <div class="items">
    <% @tasks.each do |task| %>
      <p><input type="checkbox"> <%= link_to task.title, task_path(task) %>
      <%= link_to delete_path(task), data: {turbo_method: :delete, turbo_confirm: "Delete #{task.title}?"} do %>
        <i class="fa-solid fa-trash"></i>
      <% end %>
      </p>
    <% end %>
  </div>

  <div class="add">
    <%= link_to new_task_path(@task) do %>
      <i class="fa-light fa-plus"> Add new task </i>
    <% end %>
  </div>
</div>
